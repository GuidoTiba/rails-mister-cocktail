<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path @cocktail.photo.key %>');">
  <div class="container">
    <h1><%= @cocktail.name %></h1>
  </div>
</div>
<div class="container mt-3">
  <div class="row">
    <div class="col-7 mr-3 p-3" style=" box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.2);">
      <h2>Description</h2>
      <p><%= @cocktail.description %></p>
    </div>
    <div class="col-4 p-3" style=" box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.2);">
      <h2>Ingredients</h2>
      <ul>
        <% @cocktail.doses.each do |dose| %>
          <li><%= dose.description %> <strong><%= dose.ingredient.name %></strong> 
          <%= link_to "Delete", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" }, class:"btn btn-outline-danger" %>
          </li>
        <% end %>
      </ul>
      <%= link_to "Add Ingredient", new_cocktail_dose_path(@cocktail), class:"btn btn-outline-warning w-100" %>
    </div>
    <div class="col-8 p-3 mx-auto mt-3" style=" box-shadow: 1px 1px 1px 1px rgba(0, 0, 0, 0.2);">
    <h2>Reviews</h2>
    <ul class="mb-3 pl-0">
      <% @cocktail.reviews.each do |review| %>
        <li class="list-group-item mb-2"><%= review.content %>
        <% review.rating.times do %>
          <i class="fas fa-star stars"></i>
        <% end %>
        <% (5 - review.rating).times do %>
          <i class="fas fa-star not-stars"></i>
        <% end %>
        </li>
      <% end %>
    </ul>
    <%= link_to "Add Review", new_cocktail_review_path(@cocktail), class:"btn btn-outline-warning w-100" %>
  </div>
</div>
